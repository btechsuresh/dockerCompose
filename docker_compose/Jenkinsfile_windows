pipeline {
    agent any
	 tools{
        maven 'MAVEN_HOME'
        jdk 'JAVA_HOME'
    }
    stages {
        stage('Build Jar') {            
            steps {
			   dir("docker_compose"){
			     bat 'mvn clean package -DskipTests'
			   }
			   
                
            }
			
        }
        stage('Build Image') {
            steps {
              dir("docker_compose"){
                bat "docker build -t=sureshh00007/selenium-docker ." 
              
              }               
                               
            }
        }
        stage('Push Image') {
            steps {
                withCredentials([usernamePassword(credentialsId:'dockerhub', passwordVariable: 'pass', usernameVariable: 'user')]){
                 dir("docker_compose"){
                   bat "docker logout"
                   bat "docker login --username=${user} --password=${pass}"
				   bat "docker tag sureshh00007/selenium-docker:latest sureshh00007/selenium-docker"
				   bat "docker push sureshh00007/selenium-docker:latest"
                 }
                  
                }
				  
            }
        }
    }
}
